<%- include("../partials/newUser.ejs") %>
    <div class="container">
        <% if (currentUser) { %>
            <h1>Welcome <%= currentUser.username %>
            </h1>
            <div class="card">
                <p>
                    You are currently logged in to your account, click the button below to log out.
                </p>
                <form action="/sessions?_method=DELETE" method="POST">
                    <input type="submit" class="form" value="Log Out" class="btn-small red" />
                </form>
            </div>
            <% } else { %>
                <h1>User Registration</h1>
                <div class="card">
                    <form action="/users" method="POST">
                        <fieldset>
                            <label for="username">Username:</label>
                            <input type="text" name="username" placeholder="Username...">
                        </fieldset>
                        <fieldset>
                            <label for="password">Password:</label> <br>
                            <input type="password" name="password" placeholder="Password...">
                        </fieldset>
                        <input type="submit" class="form" value="Register">
                    </form>
                </div>
                <% } %>
    </div>
    </body>

    </html>